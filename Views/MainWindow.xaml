<Window x:Class="practice_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practice_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="DarkSlateGray"
        Foreground="Wheat">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="users" Foreground="Wheat" Background="DarkSlateGray" BorderBrush="#FF447B74" BorderThickness="4"/>
        <ListBox x:Name="pole_message" Grid.Column="1" Background="#FF396B6A" Foreground="Wheat"/>
        <Button x:Name="btn_send" Grid.Row="1" Grid.Column="2" Click="btn_send_Click" Background="DarkSlateGray" Foreground="Wheat" BorderBrush="#FF447B74" BorderThickness="4"/>
        <TextBox x:Name="your_message" Grid.Row="1" Grid.Column="1" Background="DarkSlateGray" Foreground="Wheat" BorderBrush="#FF447B74" BorderThickness="4"/>
    </Grid>
</Window>
